{
  "apps": [
    {
      "exec_mode": "fork_mode",
      "cwd": "./",
      "script": "bin/www",
      "name": "lindat-billing-dev",
      "autorestart": true
    }
  ],
  "deploy" : {
    "ufal-point-dev" : {
      "user" : "www-data",
      "host" : "ufal-point-dev.ms.mff.cuni.cz",
      "repo" : "https://github.com/ufal/lindat-billing.git",
      "ref"  : "origin/minor_do",
      "path" : "/opt/lindat-billing/installation/",
      "post-deploy" : "npm install && && npm compile && pm2 startOrRestart pm2.json",
      "env": {
        "SECRETS_FILE_PATH": "/opt/lindat-billing/secrets.json"
      }
    }
  }
}